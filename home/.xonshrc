def _return_code_output():
    try:
        return_code = __xonsh_history__.rtns[-1]
    except IndexError:
        return ''
    if return_code != 0:
        code_description = __return_code_map.get(return_code, '')
        prompt_string = '{{BOLD_RED}}(╯°□°）╯︵ ┻━┻ {} {} '.format(return_code, code_description)
    else:
        prompt_string = ''
    return prompt_string


